@model long?
@{
    ViewBag.Title = "ZoekOpBestelnummer";
}

<h2>Zoek factuur op bestelnummer</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.Label("Bestelnummer", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("bestelnummer", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("bestelnummer", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zoek" class="btn btn-default" />
            </div>
        </div>
    </div>
}
