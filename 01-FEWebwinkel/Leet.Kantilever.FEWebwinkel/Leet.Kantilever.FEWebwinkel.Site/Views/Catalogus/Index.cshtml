@model IEnumerable<Leet.Kantilever.FEWebwinkel.Site.ViewModels.ProductVM>

@{
    ViewBag.Title = "Index";
}

<h2>Catalogus</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 col-sm-12 artikel">
            <div class="row">
            <div class="col-md-11">
            <img height="50" src="@Html.DisplayFor(modelItem => item.AfbeeldingPad)">
            <h4>@Html.DisplayFor(modelItem => item.Naam)</h4>
            <p>@Html.DisplayFor(modelItem => item.LeverancierNaam)</p>
            <div class="col-md-12 no-padding">
                <div class="col-md-6 no-padding">
                    <p>Voorraad</p>
                    <p>@Html.DisplayFor(modelItem => item.Prijs)</p>
                </div>
                <div class="col-md-6 no-padding">
                    Toevoegen
                </div>
            </div>
                </div>
           </div>
        </div>
    }
</div>
